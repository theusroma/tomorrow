#include <stdio.h>
typedef struct{
float nota1, nota2;
char nome[31];
}Aluno;
int main(){
Aluno aluno;
float media;
printf("Informe o nome do aluno: ");
scanf (" %30[^\n]", aluno.nome);
printf("Informe nota 1: ");
scanf("%f", &aluno.nota1);
printf("Informe nota 2: ");
scanf("%f", &aluno.nota2);
media = (aluno.nota1 + aluno.nota2) / 2;
printf("\nNome: %s", aluno.nome);
printf("\nMÃ©dia: %.2f", media);
return 0;
}
